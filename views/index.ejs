<!DOCTYPE html>
<html>
<head>
  <title>Minha Loja de Carros</title>
  <link rel="stylesheet" type="text/css" href="/estilo.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="#">Minha Loja de Carros</a>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/signin">Fazer Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/signup">Cadastrar-se</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <h2 class="mt-4">Carros Disponíveis:</h2>
    <div class="row">
      <% cars.forEach(function(car, index) { %>
        <div class="col-md-4">
          <div class="card mt-4">
            <img class="card-img-top" src="<%= car.photo %>" alt="Foto do Carro">
            <div class="card-body">
              <h5 class="card-title"><%= car.name %></h5>
              <p class="card-text">Marca: <%= car.brand %></p>
              <p class="card-text">Cor: <%= car.color %></p>
              <p class="card-text">Valor: <%= car.value %></p>
              <p class="card-text">Preço da Diária: <%= car.dailyPrice %></p>
              <% if (car.availableToday) { %>
                <p class="card-text">Status: Disponível Hoje</p>
              <% } else { %>
                <p class="card-text">Status: Indisponível Hoje</p>
                <p class="card-text">Disponível em: <%= car.nextAvailableDate %></p>
              <% } %>
            </div>
          </div>
        </div>
        <% if ((index + 1) % 3 === 0) { %>
          </div>
          <div class="row">
        <% } %>
      <% }) %>
    </div>
  </div>
  
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>